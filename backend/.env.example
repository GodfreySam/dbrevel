# DBRevel Backend Configuration
# Copy this file to .env and update with your values
# Never commit .env to version control!

# ============================================================================
# API Settings
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# Gemini API
# ============================================================================
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.0-flash-exp

# ============================================================================
# Databases
# ============================================================================
POSTGRES_URL=postgresql://dev:dev@localhost:5434/dbrevel_demo
MONGODB_URL=mongodb://localhost:27017/dbrevel_demo
REDIS_URL=

# Connection Pool Settings (optional - defaults: min=1, max=10)
POSTGRES_POOL_MIN_SIZE=1
POSTGRES_POOL_MAX_SIZE=10
MONGODB_POOL_MIN_SIZE=1
MONGODB_POOL_MAX_SIZE=10

# ============================================================================
# Security
# ============================================================================
SECRET_KEY=your-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# Email (Zoho)
# ============================================================================
EMAIL_ENABLED=true
EMAIL_FROM_ADDRESS=your-email@dbrevel.io
EMAIL_FROM_NAME=DBRevel
SUPPORT_EMAIL=your-email@dbrevel.io
ZOHO_SMTP_HOST=smtp.zoho.com
ZOHO_SMTP_PORT=587
ZOHO_SMTP_USER=your-email@dbrevel.io
ZOHO_SMTP_PASSWORD=your-app-password
EMAIL_USE_TLS=true

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# Demo Account (Optional)
# ============================================================================
DEMO_ACCOUNT_ENABLED=true
DEMO_MONGODB_URL=
DEMO_POSTGRES_URL=

# ============================================================================
# Sentry Error Tracking
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn-here.ingest.sentry.io/your-project-id
